programa {
  funcao inicio() {
    real num1, num2, num3, resultado
        
    escreva("Digite o primeiro número: ")
    leia(num1)
        
    escreva("Digite o segundo número: ")
    leia(num2)
        
    escreva("Digite o terceiro número: ")
    leia(num3)
        
    resultado = (num1 + num3) * num2
        
    escreva("O resultado da soma do primeiro com o terceiro multiplicado pelo segundo é: ", resultado)
    
  }
}
