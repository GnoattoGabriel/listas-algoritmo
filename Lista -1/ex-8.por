programa {
  funcao inicio() {
    real areaBase, altura, volume
        
      escreva("Digite a área da base da pirâmide: ")
      leia(areaBase)
        
      escreva("Digite a altura da pirâmide: ")
      leia(altura)
        
      volume = (areaBase * altura) / 3
        
      escreva("O volume da pirâmide é: ", volume)
    
  }
}
